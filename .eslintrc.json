{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "max-len": ["error", 100],
    "semi": "error",
    "no-tabs": "error",
    "no-console": "off",
    "no-constant-condition": "off"
  }
}
